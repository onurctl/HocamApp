<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundyeni2"
    tools:context=".Ekledigim">

    <TextView
        android:id="@+id/TV_Header3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:fontFamily="@font/bangers"
        android:padding="10dp"
        android:text="EKLEDİĞİM SORULAR"
        android:textColor="#E91E63"
        android:textSize="24sp" />


    <ListView
        android:id="@+id/LV_Country3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/TV_Header3"

        android:divider="@color/black"></ListView>

    <Button
        android:id="@+id/btn_Get3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_below="@+id/LV_Country3"

        android:background="#E91E63"
        android:text="Listele"
        android:textColor="#FFFFFF">

    </Button>

</RelativeLayout>